<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="FC\Board\Domain\Member" table="board_members">
        <indexes>
            <index columns="board_id"/>
            <index columns="user_id"/>
        </indexes>

        <unique-constraints>
            <unique-constraint columns="board_id,user_id"/>
        </unique-constraints>

        <id name="id" type="member_id" column="id"/>

        <field name="userId" column="user_id" type="user_id"/>

        <many-to-one field="board" target-entity="FC\Board\Domain\Board">
            <join-column name="board_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
        <embedded name="roles" class="FC\Shared\Domain\ValueObject\Roles" use-column-prefix="false"/>
        <embedded name="createdAt" class="FC\Shared\Domain\ValueObject\CreatedAt" use-column-prefix="false"/>
    </entity>

</doctrine-mapping>
