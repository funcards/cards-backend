<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="FC\User\Domain\User" table="users">
        <id name="id" type="user_id" column="id"/>

        <embedded name="name" class="FC\User\Domain\UserName" use-column-prefix="false"/>
        <embedded name="email" class="FC\User\Domain\UserEmail" use-column-prefix="false"/>
        <embedded name="password" class="FC\User\Domain\UserPassword" use-column-prefix="false"/>
        <embedded name="roles" class="FC\Shared\Domain\ValueObject\Roles" use-column-prefix="false"/>
        <embedded name="createdAt" class="FC\Shared\Domain\ValueObject\CreatedAt" use-column-prefix="false"/>
        <embedded name="updatedAt" class="FC\Shared\Domain\ValueObject\UpdatedAt" use-column-prefix="false"/>
    </entity>

</doctrine-mapping>
