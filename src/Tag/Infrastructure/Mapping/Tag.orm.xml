<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="FC\Tag\Domain\Tag" table="tags">
        <indexes>
            <index columns="board_id"/>
        </indexes>

        <id name="id" type="tag_id" column="id"/>

        <field name="boardId" column="board_id" type="board_id"/>

        <embedded name="name" class="FC\Tag\Domain\TagName" use-column-prefix="false"/>
        <embedded name="color" class="FC\Tag\Domain\TagColor" use-column-prefix="false"/>
    </entity>

</doctrine-mapping>
