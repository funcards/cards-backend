<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="FC\Category\Domain\Category" table="categories">
        <indexes>
            <index columns="board_id"/>
            <index columns="board_id,position"/>
        </indexes>

        <id name="id" type="category_id" column="id"/>

        <field name="boardId" column="board_id" type="board_id"/>

        <embedded name="name" class="FC\Category\Domain\CategoryName" use-column-prefix="false"/>
        <embedded name="position" class="FC\Category\Domain\CategoryPosition" use-column-prefix="false"/>
    </entity>

</doctrine-mapping>
